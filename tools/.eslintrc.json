{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "amd": true,
    "es6": true
  },
  "globals": {
    "it": true,
    "describe": true,
    "expect": true,
    "beforeEach": true,
    "afterEach": true,
    "afterAll": true,
    "beforeAll": true,
    "xit": true,
    "spyOn": true,
    "jasmine": true,
    "angular": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "eqeqeq": [
      "error",
      "always"
    ],
    "camelcase": [
      "error"
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "off"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
