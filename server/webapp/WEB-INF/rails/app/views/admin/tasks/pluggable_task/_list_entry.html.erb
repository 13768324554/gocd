<%- missing_plugin_link = "missing_plugin_link instant-tooltip" if scope[:tvm].instance_of? com.thoughtworks.go.presentation.MissingPluggableTaskViewModel %>
<td>
    <%= link_to_function(scope[:tvm].getTypeForDisplay(), {:class => missing_plugin_link, :title => "This plug-in is removed.", :onclick => modify_onclick_callback}) -%>
</td>
<td class="run_ifs"><%= scope[:task_config].getConditionsForDisplay() %></td>
<td class="properties">
    <%- scope[:props] = scope[:task_config].getPropertiesForDisplay() -%>
    <ul>
        <% scope[:props].each do |task_property_in_properties_list| %>
            <li class="task_property <%= task_property_in_properties_list.getCssClass() %>">
                <span class="name"><%= h(task_property_in_properties_list.getName() + l.string("SEPARATOR")) -%></span>
                <span class="value"><%= h(task_property_in_properties_list.getValue()) -%></span>
            </li>
        <% end %>
    </ul>
</td>
<td class="has_on_cancel"><%= scope[:task_config].hasCancelTask() ? scope[:tvm_of_cancel_task].getTypeForDisplay() : l.string("NO") %></td>